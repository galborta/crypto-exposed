        @font-face {
            font-family: 'SpaceMono';
            src: url('/fonts/SpaceMono-Regular.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'SpaceMono';
            src: url('/fonts/SpaceMono-Bold.ttf') format('truetype');
            font-weight: bold;
            font-style: normal;
            font-display: swap;
        }

        body {
