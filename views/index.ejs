            font-weight: bold;
            font-style: italic;
        }

        /* Paragraph spacing */
        #modalOverview p,
        #modalStory p,
        #modalMethodology p {
            margin: 0;
            padding: 0;
        }

        #modalOverview p + p,
        #modalStory p + p,
        #modalMethodology p + p {
