        /* HTML formatting for modal content */
        #modalOverview strong,
        #modalStory strong,
        #modalMethodology strong,
        #modalOverview b,
        #modalStory b,
        #modalMethodology b {
            font-family: 'SpaceMono', monospace;
            font-weight: bold;
